<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.0"
	xmlns="http://java.sun.com/xml/ns/persistence"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd">
	<persistence-unit name="reservation"
		transaction-type="RESOURCE_LOCAL">
		<!-- definir l'implementation de JPA -->
		<provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>	
		<!-- definition des entity -->
		
		<!-- configurer la base de donnÃ©e -->
		<properties>
			<!-- url -->
			<property name="hibernate.connection.url" value="jdbc:postgresql://127.0.0.1:5432/reservation"/>
			<!-- drivers -->
			<property name="hibernate.connection.driver" value="org.postgresql.Driver"/>
			<!-- login -->
			<property name="hibernate.connection.user" value="postgres"/>
			<!-- password -->
			<property name="hibernate.connection.password" value="root"/>
			<!-- gestion ordre LDD (gestion des tables) -->
			<property name="hibernate.hbm2ddl.auto" value="create"/>
			<!-- dialecte hibernate -->
			<property name="hibernate.dialect" value="org.hibernate.dialect.PostgreSQL95Dialect"/>
			<property name="hibernate.show_sql" value="true"/>
			<property name="hibernate.format_sql" value="true"/>
		</properties>
	</persistence-unit>
</persistence>